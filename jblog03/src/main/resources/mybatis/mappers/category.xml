<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
	<insert id="insertDefaultCategory" parameterType="string">
		<![CDATA[
		insert
		  into category 
		values(null, '미분류', null, #{blogId})
		]]>
	</insert>
	
	<select id="findAllById" parameterType="string" resultType="categoryvo">
		<![CDATA[
		select id, name, description, blog_id as blogId
		  from category
		 where blog_id=#{id} 
		]]>
	</select>
	
	<select id="findLatestCategoryId" parameterType="string" resultType="long">
		<![CDATA[
		select id
		  from category	
		 where blog_id=#{id} 
	  order by id desc
	     limit 1;
		]]>
	</select>

</mapper>